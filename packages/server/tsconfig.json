{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2018",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@shared/*": [
        "../../shared/*"
      ]
    },
  },
  "include": [
    "./**/*.ts",
    "./**/*.d.ts",
    "./**/*.json",
    "../../shared"
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "esm": true,
    "require": [
      "tsconfig-paths/register"
    ]
  }
}
